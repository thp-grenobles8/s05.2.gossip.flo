<html>
  <body>
    <% if flash[:warning_create_user] %>
    <div class='alert alert-danger' role='alert'>
      <button type='button' class='close' data-dismiss='alert' aria-label='Close'>
        <span aria-hidden='true'>&times;</span>
      </button> <%= flash[:warning_create_user] %>
    </div>
    <% end %>
    <main role="main">
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Cool un nouveau membre !!!<i class="fas fa-heart"></i></h1>

        </div>
        <div class="container">
          <div class="form">
          <%= form_tag url_for(action: 'create'), method: "post" do %>
          <div class="form-item">
            <%= text_field_tag 'user_name', nil, :placeholder => 'Prénom Nom' %>
          </div>
          <div class="form-item">
            <%= text_field_tag 'user_city', nil, :placeholder => 'ville' %>
          </div>
          <div class="form-item">
            <%= text_field_tag 'user_email', nil, :placeholder => "Email" %>
          </div>
          <div class="form-item">
            <%= label_tag 'Mot de passe' %>
            <%= password_field_tag 'password', nil, :placeholder => 'Mot de passe' %>
          </div>
          <div class="form-item">
            <%= password_field_tag 'password_confirmation', nil, :placeholder => 'Confirmation mot de passe' %>
          </div>
          </div>
          <div class="form-item">
            <%= submit_tag "Créer le compte" %>
          </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>
